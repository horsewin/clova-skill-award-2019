{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": [
      "es2017",
      "es2015.promise",
      "dom"
    ],
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
